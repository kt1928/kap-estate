# ========================================
# kap-estate - Real Estate Platform
# Environment Variables Template
# ========================================
#
# SECURITY NOTICE:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. NEVER commit .env to git (it's in .gitignore)
# 4. Rotate keys regularly and after any suspected exposure
#
# ========================================

# ============================
# Application
# ============================
NODE_ENV=development
PORT=3000
APP_NAME="kap-estate"
APP_URL=http://localhost:3000

# ============================
# Database
# ============================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/kap_estate

# For testing
DATABASE_URL_TEST=postgresql://postgres:yourpassword@localhost:5432/kap_estate_test

# ============================
# Authentication & Security
# ============================
# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-this

# JWT Expiration (examples: 15m, 1h, 7d, 30d)
JWT_EXPIRES_IN=24h

# Session secret for cookie signing
SESSION_SECRET=your-session-secret-min-32-characters-change-this

# ============================
# API Keys - External Services
# ============================

# RapidAPI (for Zillow, Realtor, etc.)
# Get from: https://rapidapi.com/developer/dashboard
RAPIDAPI_KEY=your-rapidapi-key-here

# Google Maps API
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# WalkScore API
# Get from: https://www.walkscore.com/professional/api.php
WALKSCORE_API_KEY=your-walkscore-api-key-here

# US Census Bureau API
# Get from: https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=your-census-api-key-here

# NYC Open Data App Token (optional but recommended)
# Get from: https://data.cityofnewyork.us/profile/app_tokens
NYC_APP_TOKEN=your-nyc-app-token-here

# ============================
# Rate Limiting
# ============================
# Redis URL for distributed rate limiting (optional)
# If not set, uses in-memory rate limiting
REDIS_URL=redis://localhost:6379

# Rate limit settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================
# Monitoring & Observability
# ============================

# Sentry DSN for error tracking (optional)
# Get from: https://sentry.io/
SENTRY_DSN=your-sentry-dsn-here

# Sentry Environment
SENTRY_ENVIRONMENT=development

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ============================
# Email (optional)
# ============================
# SMTP settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@kap-estate.com

# ============================
# Cloud Storage (optional)
# ============================
# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kap-estate-uploads

# ============================
# Feature Flags
# ============================
ENABLE_CRIME_MAPS=true
ENABLE_CENSUS_DATA=true
ENABLE_PORTFOLIO_TRACKING=true
ENABLE_MARKET_ANALYSIS=true
ENABLE_ADMIN_DASHBOARD=true

# ============================
# Development Only
# ============================
# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable debug mode
DEBUG=false

# Mock external APIs (for testing without API keys)
MOCK_EXTERNAL_APIS=false
